{
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "ava": "nyc ava ./build/test/{node,integration}/**/*.js",
    "build": "gulp build",
    "docs": "typedoc ./src/**/*.ts --out ./docs/ --mode file --excludePrivate --excludeProtected --module umd --ignoreCompilerErrors",
    "lint": "tslint 'src/**/*'",
    "report-coverage": "nyc report --reporter=text-lcov | coveralls",
    "test": "npm run build && npm run ava && npm run lint",
    "typescript:modules": "tsc -p ./tsconfigs/modules.json --declaration",
    "typescript:commonjs": "tsc -p ./tsconfigs/commonjs.json --declaration",
    "typescript:test": "tsc -p ./tsconfigs/test.json",
    "version": "echo 'TODO: ./build-docs && git add docs'"
  },
  "nyc": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "build/test/**/*"
    ]
  },
  "devDependencies": {
    "@types/express": "4.16.0",
    "@types/fs-extra": "5.0.4",
    "@types/puppeteer": "1.5.0",
    "@types/sinon": "5.0.1",
    "ava": "0.25.0",
    "coveralls": "3.0.2",
    "express": "4.16.3",
    "fs-extra": "6.0.1",
    "glob": "7.1.2",
    "gulp": "4.0.0",
    "gulp-rename": "1.3.0",
    "gulp-sourcemaps": "2.6.4",
    "gulp-typescript": "4.0.2",
    "nyc": "12.0.2",
    "puppeteer": "1.5.0",
    "rollup": "0.62.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-uglify": "3.0.0",
    "rollup-stream": "1.24.1",
    "sinon": "6.1.2",
    "tslint": "5.10.0",
    "typedoc": "0.11.1",
    "typescript": "2.9.2",
    "vinyl-buffer": "1.0.1",
    "vinyl-source-stream": "2.0.0"
  },
  "peerDependencies": {
    "chalk": "^2.x.x"
  },
  "keywords": [
    "console",
    "log",
    "hoping",
    "logger"
  ],
  "files": [
    "dist/**/*"
  ],
  "homepage": "https://github.com/gauntface/hopin-logger#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gauntface/hopin-logger.git"
  },
  "bugs": {
    "url": "https://github.com/gauntface/hopin-logger/issues"
  },
  "name": "@hopin/logger",
  "description": "A simple console abstraction with some little extras",
  "author": "gauntface",
  "license": "Apache-2.0",
  "main": "./dist/commonjs/node/index.js",
  "types": "./dist/commonjs/node/index.d.ts",
  "browser": "./dist/iife/browser/index.js",
  "version": "0.0.3"
}
