{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "../dist"
  },
  "include": [
    "../src/**/*"
  ],
  "exclude": [
    "../test/**/*",
    "../node_modules",
    "../**/*.spec.ts"
  ]
}
